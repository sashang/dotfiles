set editor=vim
set my_name="Sashan Govender"
set imap_user="sashan.govender"
set imap_pass=`echo -n $(pwsafe -pqE workemail | tail -n 1) `
set folder=imaps://mail.dektech.com.au/
set spoolfile=+INBOX
mailboxes =INBOX =Sent =Drafts =cmw-codereview
lists gerrit@lmera.ericsson.se opensaf-users@lists.sourceforge.net
subscribe gerrit@lmera.ericsson.se opensaf-users@lists.sourceforge.net
set message_cachedir=~/.mutt/cache
set header_cache=~/.mutt/cache
unset imap_passive
set imap_keepalive=300
set mail_check=30
set postponed=+Drafts
set record=+Sent
set postponed=+Drafts
set smtp_url=smtps://$imap_user:$imap_pass@mail.dektech.com.au
set from=sashan.govender@dektech.com.au
set use_from=yes
set ssl_starttls=yes
set alias_file="~/.mutt/aliases"
set sort_alias=alias
set reverse_alias=yes
set pager_stop=yes
set pager_index_lines=10
set sort=threads
set sort_aux=last-date-received
set sort_browser=reverse-date
set text_flowed=yes
set sort_alias=alias
set reverse_alias=yes
set forward_format="%s"

macro index \\f "<tag-pattern> ~x gerritforge | ~L gerrit@lmera\n:set confirmappend=no delete=yes\n<tag-prefix-cond><save-message>=cmw-codereview\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"
macro index,pager \\s ":source ~/.mutt/muttrc\n"
bind index,pager G imap-fetch-mail
bind pager j next-line
bind pager k previous-line

source ~/.mutt/theme
source $alias_file


set editor=vim
set my_name="Sashan Govender"
set imap_user="sashan.govender"
set imap_pass=`echo -n $(pwsafe -pqE workemail | tail -n 1) `
set folder=imaps://mail.dektech.com.au/
set spoolfile=+INBOX
mailboxes =INBOX
set message_cachedir=~/.mutt/cache
unset imap_passive
set imap_keepalive=300
set mail_check=30
set record=+Sent
set smtp_url=smtps://$imap_user:$imap_pass@mail.dektech.com.au
set from=sashan.govender@dektech.com.au
set use_from=yes
set ssl_starttls=yes

source ~/.mutt/theme

